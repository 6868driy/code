import cv2

# Create a VideoCapture object to capture video from the default camera
cap = cv2.VideoCapture(0)

# Set the resolution of the captured video
cap.set(3, 640)
cap.set(4, 480)

# Loop through frames of the captured video
while True:
    # Read a frame from the video capture object
    ret, frame = cap.read()
    
    # Convert the frame to grayscale
    gray_frame = cv2.cvtColor(frame, cv2.COLOR_BGR2GRAY)
    
    # Display the color frame and grayscale frame in separate windows
    cv2.imshow("Color Frame", frame)
    cv2.imshow("Grayscale Frame", gray_frame)
    
    # Save the color frame and grayscale frame to files
    cv2.imwrite("color_frame.png", frame)
    cv2.imwrite("grayscale_frame.png", gray_frame)
    
    # Wait for a key press and check if it is the "q" key to quit
    if cv2.waitKey(1) & 0xFF == ord('q'):
        break

# Release the video capture object and close all windows
cap.release()
cv2.destroyAllWindows()
